# Database Configuration
DATABASE_URI=postgresql://<USER>:<PASSWORD>@<HOST>:<PORT>/<DATABASE>

# Payload CMS Configuration
PAYLOAD_SECRET=<YOUR_PAYLOAD_SECRET>

# Environment
NODE_ENV=development

# ========================================
# CENTRALIZED URL CONFIGURATION
# ========================================
# These URLs are used across all CORS configurations
# Update these when changing domains - no need to modify code

# Production URLs (update these when changing domains)
NEXT_PUBLIC_WEB_URL=https://grandline-web.vercel.app
NEXT_PUBLIC_WEB_ADMIN_URL=https://grandline-web-admin.vercel.app
NEXT_PUBLIC_CMS_URL=https://grandline-cms.vercel.app

# Additional allowed origins (comma-separated)
ALLOWED_ORIGINS=

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=<YOUR_SUPABASE_URL>
NEXT_PUBLIC_SUPABASE_ANON_KEY=<YOUR_SUPABASE_ANON_KEY>
SUPABASE_SERVICE_ROLE_KEY=<YOUR_SUPABASE_SERVICE_ROLE_KEY>

# Cloudinary Configuration (Client-side)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=<YOUR_CLOUDINARY_CLOUD_NAME>

# Cloudinary Configuration (Server-side)
CLOUDINARY_API_KEY=<YOUR_CLOUDINARY_API_KEY>
CLOUDINARY_API_SECRET=<YOUR_CLOUDINARY_API_SECRET>