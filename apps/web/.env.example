# ========================================
# WEB APP SPECIFIC ENVIRONMENT VARIABLES
# Copy this file to .env.local and fill in your values
# ========================================

# App Identity
NEXT_PUBLIC_APP_NAME=Encreasl Marketing
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://encreasl.com

# Web-specific Features
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_BLOG=true

# Marketing & SEO
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your_google_site_verification
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your_facebook_pixel_id
NEXT_PUBLIC_LINKEDIN_INSIGHT_TAG=your_linkedin_insight_tag

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=hello@encreasl.com
NEXT_PUBLIC_CONTACT_PHONE=+1-555-0123
NEXT_PUBLIC_BUSINESS_ADDRESS=123 Marketing St, Digital City, DC 12345

# Social Media Links
NEXT_PUBLIC_SOCIAL_TWITTER=https://twitter.com/encreasl
NEXT_PUBLIC_SOCIAL_LINKEDIN=https://linkedin.com/company/encreasl
NEXT_PUBLIC_SOCIAL_FACEBOOK=https://facebook.com/encreasl
NEXT_PUBLIC_SOCIAL_INSTAGRAM=https://instagram.com/encreasl

# Lead Generation
NEXT_PUBLIC_HUBSPOT_PORTAL_ID=your_hubspot_portal_id
NEXT_PUBLIC_MAILCHIMP_LIST_ID=your_mailchimp_list_id

# Performance
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true

# Development
NEXT_PUBLIC_DEBUG_MODE=false
