{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env.local", ".env"],
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_ENV",
    "CI"
  ],
  "globalPassThroughEnv": [
    "NEXT_PUBLIC_*",
    "ADMIN_*",
    "PAYLOAD_*",
    "DATABASE_URL",
    "DATABASE_URI",
    "POSTGRES_URL",
    "SUPABASE_SERVICE_ROLE_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "lib/**", "src/**/*.js", "src/**/*.d.ts"],
      "inputs": ["$TURBO_DEFAULT$", ".env.local", ".env"],
      "env": [
        "NEXT_PUBLIC_*",
        "ADMIN_*",
        "PAYLOAD_*",
        "DATABASE_URL",
        "DATABASE_URI",
        "POSTGRES_URL",
        "SUPABASE_SERVICE_ROLE_KEY"
      ]
    },

    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_*",
        "ADMIN_*",
        "PAYLOAD_*",
        "DATABASE_URL",
        "DATABASE_URI",
        "POSTGRES_URL",
        "SUPABASE_SERVICE_ROLE_KEY"
      ]
    },
    "dev:turbo": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_*",
        "FIREBASE_*",
        "ADMIN_*",
        "PAYLOAD_*",
        "DATABASE_URL",
        "DATABASE_URI",
        "POSTGRES_URL",
        "SUPABASE_SERVICE_ROLE_KEY"
      ]
    },

    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:functions": {
      "outputs": [],
      "inputs": ["src/**", ".eslintrc.*"],
      "env": []
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "type-check:functions": {
      "outputs": [],
      "inputs": ["src/**", "tsconfig.json"],
      "env": []
    },
    "test:functions": {
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "**/*.test.ts", "**/*.spec.ts", "jest.config.*"],
      "env": [
        "NODE_ENV"
      ]
    }

  }
}
